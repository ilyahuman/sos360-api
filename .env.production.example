NODE_ENV=production
PORT=3002
API_VERSION=v1
APP_NAME=SOS360-API

# Set by hosting platform or manually configure
DATABASE_URL="postgresql://user:password@host:5432/sos360?schema=public"

# Frontend URL for CORS
CORS_ORIGIN=https://app.sos360.com,https://sos360.com

# Production secrets (64+ chars required in production mode)
# Generate with: openssl rand -base64 48
JWT_SECRET=REPLACE_WITH_SECURE_SECRET_MINIMUM_64_CHARS
JWT_REFRESH_SECRET=REPLACE_WITH_DIFFERENT_SECRET_MINIMUM_64_CHARS
COOKIE_SECRET=REPLACE_WITH_COOKIE_SECRET_MINIMUM_64_CHARS

# Firebase (optional)
FIREBASE_PROJECT_ID=""
FIREBASE_PRIVATE_KEY_ID=""
FIREBASE_PRIVATE_KEY=""
FIREBASE_CLIENT_EMAIL=""
FIREBASE_CLIENT_ID=""

# Stripe (optional)
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
STRIPE_PUBLISHABLE_KEY=""

# Email (optional)
SMTP_HOST=""
SMTP_USER=""
SMTP_PASS=""
EMAIL_FROM=""

# Redis (optional)
REDIS_URL="redis://localhost:6379"
