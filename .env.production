NODE_ENV=production
PORT=3002
API_VERSION=v1
APP_NAME=SOS360-API

# Railway auto-sets DATABASE_URL from PostgreSQL addon
DATABASE_URL="postgresql://user:password@host:5432/sos360?schema=public"

# Sandbox secrets (64+ chars required in production mode)
JWT_SECRET=sandbox-jwt-secret-minimum-64-chars-for-testing-purposes-only-change
JWT_REFRESH_SECRET=sandbox-jwt-refresh-minimum-64-chars-for-testing-purposes-change
COOKIE_SECRET=sandbox-cookie-secret-minimum-64-chars-for-testing-purposes-change

# Firebase (optional)
FIREBASE_PROJECT_ID=""
FIREBASE_PRIVATE_KEY_ID=""
FIREBASE_PRIVATE_KEY=""
FIREBASE_CLIENT_EMAIL=""
FIREBASE_CLIENT_ID=""

# Stripe (optional)
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
STRIPE_PUBLISHABLE_KEY=""

# Email (optional)
SMTP_HOST=""
SMTP_USER=""
SMTP_PASS=""
EMAIL_FROM=""

# Redis (optional)
REDIS_URL="redis://localhost:6379"
