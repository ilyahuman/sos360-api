{
  "name": "sos360-api",
  "version": "1.0.0",
  "description": "Enterprise SaaS ERP/CRM Platform for Asphalt & Exterior Services Industry",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "build:watch": "tsc --watch",
    "start": "node dist/app.js",
    "start:prod": "NODE_ENV=production node dist/app.js",
    "dev": "NODE_ENV=development ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --clear src/app.ts",
    "dev:debug": "NODE_ENV=development ts-node-dev --inspect --respawn --transpile-only --clear src/app.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "test": "echo 'Add your test script here'",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset",
    "db:seed": "ts-node --transpile-only prisma/seed.ts",
    "db:studio": "prisma studio",
    "clean": "rimraf dist",
    "prestart": "pnpm run build",
    "postinstall": "prisma generate"
  },
  "keywords": [
    "crm",
    "erp",
    "saas",
    "construction",
    "typescript",
    "express",
    "prisma",
    "postgresql"
  ],
  "author": "SOS360 Development Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@node-rs/argon2": "^2.0.2",
    "@prisma/client": "^5.22.0",
    "better-auth": "^1.3.26",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dayjs": "^1.11.18",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "express-async-errors": "^3.1.1",
    "helmet": "^7.2.0",
    "ioredis": "^5.8.0",
    "jose": "^5.10.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "prisma": "^5.22.0",
    "reflect-metadata": "^0.1.14",
    "resend": "^6.1.2",
    "sharp": "^0.32.6",
    "stripe": "^14.25.0",
    "tslib": "^2.8.1",
    "uuid": "^9.0.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^4.7.1",
    "zod": "^4.1.5",
    "zod-validation-error": "^4.0.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/glob": "^9.0.0",
    "@types/lodash": "^4.17.20",
    "@types/moment": "^2.13.0",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.19.13",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.19",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.10",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  }
}
